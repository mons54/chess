<!doctype html>
<html lang="<%= lang %>">
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="description" content="<%= description %>">
        <meta name="viewport" content="width=device-width, initial-scale=1.0, minimum-scale=1.0">

        <meta property="og:type"            content="article" />
        <meta property="og:lang"            content="<%= lang %>" />
        <meta property="og:title"           content="<%= title %>" />
        <meta property="og:image"           content="https://www.worldofchess.online/images/trophies/trophy-<%= id %>.png" />
        <meta property="og:description"     content="<%= description %>" />
        <meta property="og:url"             content="https://www.worldofchess.online/<%= lang %>/trophies/<%= id %>" />
        <meta property="fb:app_id"          content="1687859708170830" />

        <meta name="twitter:card" content="summary" />
        <meta name="twitter:site" content="@WorldOfChess_" />
        <meta name="twitter:title" content="<%= title %> - World of Chess" />
        <meta name="twitter:description" content="<%= description %>" />
        <meta name="twitter:image" content="https://www.worldofchess.online/images/trophies/trophy-<%= id %>.png" />
        
        <title><%= title %> - World of Chess</title>
        
        <link rel="shortcut icon" href="/images/favicon.ico">

        <link href="css/trophy.css" rel="stylesheet">
    </head>
    <body>
        <h1 class="trophy-title"><%= title %></h1>
        <div class="trophy-image">
            <img src="/images/trophies/trophy-<%= id %>.svg">
        </div>
        <p class="trophy-description"><%= description %></p>
    </body>
</html>

